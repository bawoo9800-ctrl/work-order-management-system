<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- 개발 환경: 모든 인증서 신뢰 -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <!-- 시스템 인증서 신뢰 -->
            <certificates src="system" />
            <!-- 사용자 인증서 신뢰 -->
            <certificates src="user" />
        </trust-anchors>
    </base-config>
    
    <!-- Synology NAS 서버 특별 설정 -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">wo.doorlife.synology.me</domain>
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </domain-config>
</network-security-config>
